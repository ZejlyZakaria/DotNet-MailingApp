@model Mailing.Models.User
@{
    ViewBag.Title = "Se connecter à votre compte";

}
<!DOCTYPE html>
<html lang="en" style="">

<head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.17e50649.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="~/Tailwind/jquery.min.js"></script>
    <script src="~/Tailwind/cdn.js"></script>
    <link rel="stylesheet" href="~/Tailwind/flowbite.min.css" />
    <link href='~/Tailwind/boxicons.min.css' rel='stylesheet'>

    <script>
        // On page load or when changing themes, best to add inline in `head` to avoid FOUC
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>

</head>

<body>

    <div class="bg-no-repeat bg-cover bg-center relative" style="background-image: url(https://images.unsplash.com/photo-1559057287-ce0f595679a8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
        <div class="absolute bg-gradient-to-b from-indigo-800 to-indigo-200 opacity-75 inset-0 z-0"></div>
        <div class="min-h-screen sm:flex sm:flex-row mx-0 justify-center">
            <div class="flex-col flex  self-center p-10 sm:max-w-5xl xl:max-w-2xl  z-10">
                <div class="self-start hidden lg:flex flex-col  text-white">
                    <img src="" class="mb-3">
                    <h1 class="mb-3 font-bold text-5xl">Bienvenue sur Mailing 👋</h1>
                    <p class="pr-3">
                        Au système de gestion des courriers pour La Direction Provinciale de l'Education Nationale de Fès
                    </p>
                </div>
            </div>
            <div class="flex justify-center self-center  z-10">
                <div class="p-12 bg-white mx-auto rounded-2xl w-100 ">
                    <div class="mb-4">
                        <h3 class="font-semibold text-2xl text-gray-800">Se connecter </h3>
                        <p class="text-gray-500">
                            Connectez-vous à votre compte s'il vous plaît.
                        </p>
                    </div>
                    <form method="post">
                        <div class="space-y-5">
                            <div class="space-y-2">
                                <label class="text-sm font-medium text-gray-700 tracking-wide">Email</label>
                                <input class=" w-full text-base px-4 py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-purple-400" id="Email" name="Email" type="email" placeholder="mail@gmail.com" required>
                            </div>
                            <div class="space-y-2">
                                <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
                                    Mot de passe
                                </label>
                                <input class="w-full content-center text-base px-4 py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-purple-400" id="Password" name="Password" type="password" placeholder="••••••••" required>
                            </div>
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 bg-white-500 border-gray-300 rounded">
                                    <label for="remember_me" class="ml-2 block text-sm text-gray-800">
                                        Rappelle moi
                                    </label>
                                </div>
                                <div class="text-sm">
                                    <a href="#" class="text-blue-600 hover:text-blue-700">
                                        Mot de passe oublié?
                                    </a>
                                </div>
                            </div>
                            <div>
                                <button type="submit" class="w-full flex justify-center bg-blue-700  hover:bg-blue-600 text-white p-3  rounded-full tracking-wide font-semibold  shadow-lg cursor-pointer transition ease-in duration-500">
                                    Je me connecte
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="pt-5 text-center text-gray-400 text-xs">
                        <span>
                            Copyright © 2022-2023
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>